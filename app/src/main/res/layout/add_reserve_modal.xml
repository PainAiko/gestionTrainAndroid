<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_idTrain"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="491dp"
            android:padding="24dp">

            <TextView
                android:id="@+id/formReserve"
                android:layout_width="306dp"
                android:layout_height="51dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="41dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="40dp"
                android:text="Ajout du Reservation" />

            <Spinner
                android:id="@+id/trainSpin"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp" />

            <Spinner
                android:id="@+id/voyageurSpin"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_below="@+id/trainSpin"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/dateEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/voyageurSpin"
                android:layout_marginTop="27dp"
                android:hint="date"
                android:inputType="date" />

            <EditText
                android:id="@+id/fraisEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateEdit"
                android:layout_marginTop="27dp"
                android:inputType="phone"
                android:hint="Frais" />

            <Button
                android:id="@+id/saveReservebtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fraisEdit"
                android:layout_marginTop="25dp"
                android:text="@string/save_button"
                android:textSize="14sp"
                android:textStyle="bold" />



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>