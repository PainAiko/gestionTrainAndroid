<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:layout_height="220dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewTrain"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/cardview_compat_inset_shadow"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="5dp">

        <RelativeLayout
            android:layout_width="411dp"
            android:layout_height="170dp"
            android:padding="15dp"
            android:paddingLeft="14dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/numReservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="numero"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/train"
                android:layout_below="@+id/numReservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="train"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/voyageur"
                android:layout_below="@+id/train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="voyageur"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/date"
                android:layout_below="@+id/voyageur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/frais"
                android:layout_below="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="frais"
                android:textSize="20dp" />
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_alignBottom="@+id/date"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/editBtnReserve"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_edit" />

                <Button
                    android:id="@+id/delBtnReserve"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:background="@android:drawable/ic_delete" />
            </TableRow>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>